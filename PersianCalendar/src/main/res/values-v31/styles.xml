<?xml version="1.0" encoding="utf-8"?>
<resources>

    <color name="widget_background">@android:color/system_accent2_50</color>
    <color name="widget_divider">@android:color/system_accent2_200</color>
    <color name="widget_refresh_icon_color">@android:color/system_neutral2_700</color>

    <style name="WidgetTheme" parent="@android:style/Theme.DeviceDefault.DayNight" />

    <style name="WidgetTextStyle" />

    <style name="DynamicLightTheme" parent="BaseLightTheme">
        <item name="colorPrimary">@android:color/system_accent3_800</item>
        <item name="colorAccent">@android:color/system_accent1_800</item>
        <item name="colorAppBar">@android:color/system_accent1_50</item>

        <item name="colorSurface">@android:color/system_accent1_10</item>
        <item name="colorTextNormal">@color/modern_text_normal</item>
        <item name="colorTextSecond">@color/modern_text_second</item>
        <item name="colorTextHoliday">@android:color/system_accent1_400</item>
        <item name="colorHoliday">@android:color/system_accent1_400</item>
        <item name="colorTextDrawer">@color/modern_text_drawer</item>
        <item name="colorOnAppBar">@color/modern_text_day</item>
        <item name="colorTextDayName">@color/modern_text_day_name</item>
        <item name="colorCurrentDay">@android:color/system_accent1_600</item>
        <item name="colorSelectedDay">@android:color/system_accent2_100</item>
        <item name="colorEventIndicator">@color/modern_event_indicator</item>
        <item name="colorDrawerIcon">@android:color/system_accent1_900</item>
        <item name="colorMonthSwitch">@android:color/system_accent3_600</item>

        <item name="android:textColor">@color/modern_text_normal</item>

        <item name="coloredTabIndicatorColor">@android:color/system_accent1_600</item>
        <item name="colorTextDaySelected">@android:color/system_accent2_900</item>
        <item name="colorAppointment">@android:color/system_accent1_400</item>
    </style>

    <style name="DynamicDarkTheme" parent="BaseDarkTheme">
        <item name="colorPrimary">@android:color/system_accent3_200</item>
        <item name="colorAccent">@android:color/system_accent1_100</item>
        <item name="colorAppBar">@android:color/system_neutral1_800</item>

        <item name="colorSurface">@android:color/system_neutral1_900</item>
        <item name="colorTextNormal">@color/black_text_normal</item>
        <item name="colorTextSecond">@color/black_text_second</item>
        <item name="colorTextHoliday">@android:color/system_accent1_200</item>
        <item name="colorHoliday">@android:color/system_accent1_200</item>
        <item name="colorTextDrawer">@color/black_text_drawer</item>
        <item name="colorOnAppBar">@color/black_text_day</item>
        <item name="colorTextDayName">@color/black_text_day_name</item>
        <item name="colorCurrentDay">@android:color/system_accent1_200</item>
        <item name="colorSelectedDay">@android:color/system_accent2_300</item>
        <item name="colorEventIndicator">@color/black_event_indicator</item>
        <item name="colorDrawerIcon">@android:color/system_accent1_100</item>
        <item name="colorMonthSwitch">@android:color/system_accent1_50</item>

        <item name="android:textColor">@color/black_text_normal</item>

        <item name="coloredTabIndicatorColor">@android:color/system_accent1_300</item>
        <item name="colorTextDaySelected">@android:color/system_accent2_50</item>
        <item name="colorAppointment">@android:color/system_accent1_300</item>
    </style>

    <style name="DynamicBlackTheme" parent="DynamicDarkTheme">
        <item name="colorAppBar">@android:color/system_neutral1_1000</item>
    </style>

    <style name="AlertDialogThemeBlurSupportedOverlay">
        <item name="materialAlertDialogTheme">@style/AlertDialogThemeBlurSupported</item>
    </style>

    <style name="AlertDialogThemeBlurSupported" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:windowBlurBehindEnabled">true</item>
        <item name="android:windowBlurBehindRadius">12dp</item>
        <item name="android:backgroundDimAmount">0</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>