<?xml version="1.0" encoding="utf-8"?>
<animated-vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:tools="http://schemas.android.com/tools"
    android:drawable="@drawable/splash_icon"
    tools:ignore="NewApi">
    <target android:name="first_band">
        <aapt:attr name="android:animation">
            <set android:ordering="together">
                <!-- this could be done using scaleX just like the other bands
                     but it is intended to be an example of path animator -->
                <objectAnimator
                    android:duration="240"
                    android:propertyName="pathData"
                    android:startOffset="0"
                    android:valueFrom="M325,202v61h0v-61z"
                    android:valueTo="M325,202v61h257v-61z"
                    android:valueType="pathType" />
                <objectAnimator
                    android:duration="240"
                    android:propertyName="pathData"
                    android:startOffset="240"
                    android:valueFrom="M325,202v61h257v-61z"
                    android:valueTo="M325,202v61h234v-61z"
                    android:valueType="pathType" />
            </set>
        </aapt:attr>
    </target>
    <target android:name="second_band">
        <aapt:attr name="android:animation">
            <set android:ordering="together">
                <objectAnimator
                    android:duration="0"
                    android:propertyName="scaleX"
                    android:startOffset="0"
                    android:valueFrom="0"
                    android:valueTo="0"
                    android:valueType="floatType" />
                <objectAnimator
                    android:duration="240"
                    android:propertyName="scaleX"
                    android:startOffset="320"
                    android:valueFrom="0"
                    android:valueTo="1.1"
                    android:valueType="floatType">
                    <!-- it is almost unnoticeable, just as an example of path interpolator -->
                    <aapt:attr name="android:interpolator">
                        <pathInterpolator android:pathData="M 0.0,0.0 c0.333,0 0.667,1 1.0,1.0" />
                    </aapt:attr>
                </objectAnimator>
                <objectAnimator
                    android:duration="240"
                    android:propertyName="scaleX"
                    android:startOffset="560"
                    android:valueFrom="1.1"
                    android:valueTo="1"
                    android:valueType="floatType" />
            </set>
        </aapt:attr>
    </target>
    <target android:name="third_band">
        <aapt:attr name="android:animation">
            <set android:ordering="together">
                <objectAnimator
                    android:duration="0"
                    android:propertyName="scaleX"
                    android:startOffset="0"
                    android:valueFrom="0"
                    android:valueTo="0"
                    android:valueType="floatType" />
                <objectAnimator
                    android:duration="240"
                    android:propertyName="scaleX"
                    android:startOffset="440"
                    android:valueFrom="0"
                    android:valueTo="1.1"
                    android:valueType="floatType" />
                <objectAnimator
                    android:duration="240"
                    android:propertyName="scaleX"
                    android:startOffset="680"
                    android:valueFrom="1.1"
                    android:valueTo="1"
                    android:valueType="floatType" />
            </set>
        </aapt:attr>
    </target>
    <target android:name="fourth_band">
        <aapt:attr name="android:animation">
            <set android:ordering="together">
                <objectAnimator
                    android:duration="0"
                    android:propertyName="scaleX"
                    android:startOffset="0"
                    android:valueFrom="0"
                    android:valueTo="0"
                    android:valueType="floatType" />
                <objectAnimator
                    android:duration="320"
                    android:propertyName="scaleX"
                    android:startOffset="600"
                    android:valueFrom="0"
                    android:valueTo="1.1"
                    android:valueType="floatType" />
                <objectAnimator
                    android:duration="320"
                    android:propertyName="scaleX"
                    android:startOffset="920"
                    android:valueFrom="1.1"
                    android:valueTo="1"
                    android:valueType="floatType" />
            </set>
        </aapt:attr>
    </target>
</animated-vector>
