<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_layout4x1dateOnly"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:orientation="horizontal"
    android:padding="2dp"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context=".Widget4x1dateOnly">

    <TextClock
        android:id="@+id/textPlaceholder1_4x1_dateOnly"
        style="@style/ShadowTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fontFamily="sans-serif-thin"
        android:format12Hour="H:mm"
        android:format24Hour="H:mm"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textPlaceholder3_4x1_dateOnly"
        style="@style/ShadowTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textPlaceholder2_4x1_dateOnly"
        style="@style/ShadowTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

</LinearLayout>
