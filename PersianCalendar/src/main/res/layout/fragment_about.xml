                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:text="Hamid Safdari"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:textColor="?attr/colorTextSecond"
                    android:id="@+id/summary_dev_2"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:textSize="12sp"
                    android:layout_below="@+id/title_dev_2"
                    android:text=" @hamidsafdari"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <RelativeLayout
                android:clickable="false"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dev_3">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:srcCompat="@drawable/dev_3"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:scaleType="center"
                    android:id="@+id/icon_dev_3"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:textColor="?attr/colorTextDrawer"
                    android:id="@+id/title_dev_3"
                    android:textStyle="bold"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:text="Behdad Abedi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:textColor="?attr/colorTextSecond"
                    android:id="@+id/summary_dev_3"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:textSize="12sp"
                    android:layout_below="@+id/title_dev_3"
                    android:text=" @behdad222"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <RelativeLayout
                android:clickable="false"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dev_4">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:srcCompat="@drawable/dev_4"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:scaleType="center"
                    android:id="@+id/icon_dev_4"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:textColor="?attr/colorTextDrawer"
                    android:id="@+id/title_dev_4"
                    android:textStyle="bold"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:text="Hamidreza Bayat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:textColor="?attr/colorTextSecond"
                    android:id="@+id/summary_dev_4"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:textSize="12sp"
                    android:layout_below="@+id/title_dev_4"
                    android:text=" @HrBDev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <RelativeLayout
                android:clickable="false"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dev_5">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:srcCompat="@drawable/dev_5"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:scaleType="center"
                    android:id="@+id/icon_dev_5"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:textColor="?attr/colorTextDrawer"
                    android:id="@+id/title_dev_5"
                    android:textStyle="bold"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:text="Alireza Afkar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:textColor="?attr/colorTextSecond"
                    android:id="@+id/summary_dev_5"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:textSize="12sp"
                    android:layout_below="@+id/title_dev_5"
                    android:text=" @alirezaafkar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <RelativeLayout
                android:clickable="false"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dev_6">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:srcCompat="@drawable/dev_6"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:scaleType="center"
                    android:id="@+id/icon_dev_6"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:textColor="?attr/colorTextDrawer"
                    android:id="@+id/title_dev_6"
                    android:textStyle="bold"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:text="Mehdi Dimyadi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:textColor="?attr/colorTextSecond"
                    android:id="@+id/summary_dev_6"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:textSize="12sp"
                    android:layout_below="@+id/title_dev_6"
                    android:text=" @MEHDIMYADI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat style="@style/AboutCard"
            android:background="?attr/colorCard">

            <androidx.appcompat.widget.AppCompatTextView
                android:textColor="?attr/colorTextDrawer"
                android:text="@string/about_contributors"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:clickable="false"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/contributors">

                <androidx.appcompat.widget.AppCompatImageView
                    android:tint="?attr/colorDrawerIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:srcCompat="@drawable/ic_developer"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:scaleType="center"
                    android:id="@+id/icon_contributors"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:textColor="?attr/colorTextDrawer"
                    android:id="@+id/title_contributors"
                    android:textStyle="bold"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:text="Javad Arjmandi (@La-Volpe), Mehdi Sadeghi (@mehdisadeghi), Masood Fallahpoor (@MasoodFallahpoor), Abbas Oveissi (@abbas-oveissi), Muhammad Shuaib (@yethrosh), Aysha Aminnejad (@aysha319)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</ScrollView>