<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/about_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.LinearLayoutCompat
        style="@style/AboutCard"
        android:gravity="center"
        android:background="?attr/colorCard">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/gpl_logo"
            android:src="@drawable/gpl3_logo" />

        <androidx.appcompat.widget.AppCompatTextView
            android:textColor="?attr/colorTextDrawer"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:paddingTop="@dimen/view_padding"
            android:textSize="@dimen/text_size_title"
            android:layout_height="wrap_content"
            android:text="@string/app_name"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="@dimen/padding_item"
            android:gravity="center"
            android:textSize="@dimen/text_size_description" />

    </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            style="@style/AboutCard"
            android:background="?attr/colorCard">

        <androidx.appcompat.widget.AppCompatTextView
            android:textColor="?attr/colorTextDrawer"
            android:text="@string/license"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:id="@+id/licenses"
            android:background="?android:attr/selectableItemBackground"
            android:layout_gravity="bottom">

            <androidx.appcompat.widget.AppCompatImageView
                android:tint="?attr/colorDrawerIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:srcCompat="@drawable/ic_licences"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:scaleType="center"
                android:id="@id/icon"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:textColor="?attr/colorTextDrawer"
                android:id="@id/title"
                android:textStyle="bold"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:text="@string/license"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:textColor="?attr/colorTextSecond"
                android:text="@string/license_sum"
                android:textSize="12sp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_below="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <LinearLayout style="@style/AboutCard"
            android:background="?attr/colorCard">

            <androidx.appcompat.widget.AppCompatTextView
                android:textColor="?attr/colorTextDrawer"
                android:text="@string/about_support_developers"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/reportBug">

                <androidx.appcompat.widget.AppCompatImageView
                    android:tint="?attr/colorDrawerIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:srcCompat="@drawable/ic_bug"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:scaleType="center"
                    android:id="@+id/icon"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:textColor="?attr/colorTextDrawer"
                    android:id="@+id/title"
                    android:textStyle="bold"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:text="@string/report_bug"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:textColor="?attr/colorTextSecond"
                    android:id="@+id/summary"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:textSize="12sp"
                    android:layout_below="@+id/title"
                    android:text="@string/report_bug_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

        </LinearLayout>

        <androidx.appcompat.widget.LinearLayoutCompat style="@style/AboutCard"
            android:background="?attr/colorCard">

            <androidx.appcompat.widget.AppCompatTextView
                android:textColor="?attr/colorTextDrawer"
                android:text="@string/about_developers"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:clickable="false"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dev_1">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:srcCompat="@drawable/dev_1"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:scaleType="center"
                    android:id="@+id/icon_dev_1"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:textColor="?attr/colorTextDrawer"
                    android:id="@+id/title_dev_1"
                    android:textStyle="bold"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:text="Ebrahim Byagowi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:textColor="?attr/colorTextSecond"
                    android:id="@+id/summary_dev_1"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:textSize="12sp"
                    android:layout_below="@+id/title_dev_1"
                    android:text=" @ebraminio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <RelativeLayout
                android:clickable="false"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dev_2">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:srcCompat="@drawable/dev_2"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:scaleType="center"
                    android:id="@+id/icon_dev_2"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:textColor="?attr/colorTextDrawer"
                    android:id="@+id/title_dev_2"
