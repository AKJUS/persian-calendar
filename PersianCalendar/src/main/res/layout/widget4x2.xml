<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_layout4x2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="1dp"
    android:layout_marginRight="1dp"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    tools:context=".Widget4x2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textPlaceholder2_4x2"
            style="@style/ShadowTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:text="8:00"
            android:textColor="@android:color/white"
            android:textSize="14sp" />


        <FrameLayout
            android:layout_gravity="center"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/widget_divider" />

        <TextClock
            android:id="@+id/textPlaceholder1_4x2"
            style="@style/ShadowTextStyle"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:format12Hour="H:mm"
            android:format24Hour="H:mm"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@android:color/white"
            android:textSize="56sp" />



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"></LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="center"
        android:minHeight="35dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textPlaceholder4owghat_1_4x2"
            style="@style/ShadowTextStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <FrameLayout
            android:layout_gravity="center"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="@color/widget_divider" />

        <TextView
            android:id="@+id/textPlaceholder4owghat_2_4x2"
            style="@style/ShadowTextStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <FrameLayout
            android:layout_gravity="center"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="@color/widget_divider" />

        <TextView
            android:id="@+id/textPlaceholder4owghat_3_4x2"
            style="@style/ShadowTextStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <FrameLayout
            android:layout_gravity="center"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="@color/widget_divider" />

        <TextView
            android:id="@+id/textPlaceholder4owghat_4_4x2"
            style="@style/ShadowTextStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <FrameLayout
            android:layout_gravity="center"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="@color/widget_divider" />

        <TextView
            android:id="@+id/textPlaceholder4owghat_5_4x2"
            style="@style/ShadowTextStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </LinearLayout>


</LinearLayout>